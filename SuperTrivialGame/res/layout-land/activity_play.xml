<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="horizontal"
    android:background="@drawable/fondohorizontal">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textView1"
        android:src="@drawable/questiongreen4" />

    <TextView
        android:id="@+id/textView1"
        style="@style/LetrasPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_centerHorizontal="true"
       	android:text="@string/title_play"
        android:textSize="28sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView1"
        android:src="@drawable/questiongreen4" />

    <TextView
        android:id="@+id/score"
        style="@style/LetrasPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@+id/textView1"
        android:text="@string/score"/>

    <TextView
        android:id="@+id/time"
        style="@style/LetrasPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/score"
        android:layout_alignBottom="@+id/score"
        android:layout_alignRight="@+id/textView1"
        android:text="@string/time" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/time"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/time" />

    <TextView
        android:id="@+id/pregunta"
        style="@style/LetrasPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:gravity="center" />

    <Button
        android:id="@+id/respuesta2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/respuesta1"
        android:layout_alignBottom="@+id/respuesta1"
        android:layout_alignLeft="@+id/imageView2"
        android:text="Button" 
        android:minWidth="175sp"/>

    <Button
        android:id="@+id/respuesta3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/respuesta1"
        android:layout_alignRight="@+id/respuesta1"
        android:layout_below="@+id/respuesta1"
        android:layout_marginTop="23dp"
        android:text="Button" />

    <Button
        android:id="@+id/respuesta4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/respuesta3"
        android:layout_alignBottom="@+id/respuesta3"
        android:layout_alignLeft="@+id/respuesta2"
        android:layout_alignRight="@+id/respuesta2"
        android:text="Button" />

    <Button
        android:id="@+id/respuesta1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pregunta"
        android:layout_marginTop="25dp"
        android:layout_toLeftOf="@+id/textView1"
        android:text="Button" 
        android:minWidth="175sp"/>

</RelativeLayout>
